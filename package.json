{
  "name": "flex-template",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "nodemon",
    "build": "yarn build:client:csr && yarn build:client:ssr && yarn build:server",
    "build:client:csr": "vite build --outDir dist/csr",
    "build:client:ssr": "vite build --outDir dist/ssr --ssr client/main-ssr.tsx",
    "build:server": "tsc -b tsconfig.server.json",
    "serve": "NODE_ENV=production WEB_PORT=5000 node dist/server/main | pino-pretty",
    "test": "tsc"
  },
  "dependencies": {
    "fastify": "^3.11.0",
    "fastify-compress": "^3.4.1",
    "fastify-static": "^3.4.0",
    "middie": "^5.2.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@types/connect": "^3.4.34",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.1.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^4.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2",
    "vite": "^2.0.0-beta.69"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
