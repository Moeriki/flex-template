{
  "name": "flex-template",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "ts-node-dev --project tsconfig.backend.json server/main | pino-pretty",
    "prod": "yarn run build && yarn start",
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "vite build && vite build --ssr",
    "build:server": "tsc -b tsconfig.server.json",
    "start": "NODE_ENV=production node ./dist/server",
    "test": "tsc && jest"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "koa-compress": "^5.0.1",
    "koa-connect": "^2.1.0",
    "koa-static": "^5.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "vite-plugin-ssr": "^0.1.0-beta.7"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.12.16",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/connect": "^3.4.34",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.13.0",
    "@types/koa-compress": "^4.0.1",
    "@types/node": "^14.14.27",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react-refresh": "^1.1.0",
    "babel-jest": "^26.6.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "pino-pretty": "^4.5.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.1.2",
    "vite": "^2.0.0-beta.69"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css)$": "identity-obj-proxy",
      "\\.(svg)$": "<rootDir>/__mocks__/_image.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/spec/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/spec/transformer.js"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
